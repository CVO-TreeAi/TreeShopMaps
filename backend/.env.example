# TreeShop Backend API Configuration

# Server Configuration
PORT=3000
NODE_ENV=production

# Regrid API Configuration (KEEP SECURE!)
REGRID_API_TOKEN=your_regrid_api_token_here

# Redis Configuration (for rate limiting and caching)
REDIS_URL=redis://localhost:6379

# Security Configuration
JWT_SECRET=your_jwt_secret_here
API_KEY_SALT=your_api_key_salt_here

# Monitoring Configuration
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MAX_DAILY=1000

# CORS Configuration
ALLOWED_ORIGINS=https://treeshop.com,https://www.treeshop.com

# Database Configuration (if using database for advanced features)
DATABASE_URL=postgresql://localhost:5432/treeshop_maps